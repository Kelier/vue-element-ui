                            <ul class="tabs" data-tabs id="catalog-tabs">
                                <li class="tabs-title is-active"><a href="#panel1" aria-selected="true"
                                                                    id="panelTab1">目录</a>
                                </li>
                                <li class="tabs-title"><a href="#panel2"  id="panelTab2">成绩评定</a>
                                </li>
                            </ul>
                            <!--编辑章节信息-->
                            <span class="span-add">
                        <a data-open="add-chapter"><span class="span-config"><i
                                class="fi-plus i-view"></i>添加章</span></a>
                                <!--添加章-->
                        <div class="reveal chapter-height" id="add-chapter" data-reveal>
                            <h5>添加章</h5>
                            <div class="chapter-form">
                                 <label style="width: 80px;height: 40px;font-size: 1rem">章标题 </label>
                                  <div class="medium-10 columns">
                             <input type="text" placeholder="最多输入60个字符" maxlength="60" id="add_chapter_content">
                            </div>

                            </div>
                            <div style="display: block;">
                                <a class="chapter-button window-close clear search-css" data-close>取消</a>
                            <a class="chapter-button clear search-css" onclick="create_chapter('',0,'create')"
                               id="create_chapter">确定</a>
                            </div>
                        </div>
                                <!--重新打分提示框-->
                        <div class="reveal chapter-height" id="reset-score" data-reveal>
                            <h5>提示</h5>
                                     <p style="text-indent: 2em;margin-top: 20px">确定要重新打分吗？</p>
                            <div class="row delete-row">
                                 <a class="chapter-button search-css maybe-button" data-close>取消</a>
                                 <a class="chapter-button search-css maybe-button" id="resetThis">确定</a>
                            </div>


                        </div>
                                <!--编辑章-->
                        <div class="reveal chapter-height" id="edit-chapter" data-reveal>
                            <h5>编辑章</h5>
                            <div class="chapter-form">
                                <label style="width: 80px;height: 40px;font-size: 1rem">章标题 </label>
                                <div class="medium-10 columns">
                                    <input type="text" placeholder="" id="edit_chapter_content">
                                </div>

                            </div>
                            <div style="display: block;">
                                 <a class="chapter-button window-close clear  search-css" data-close="">取消</a>
                                <a class="chapter-button clear  search-css" id="edit_chapter">确定</a>
                            </div>
                        </div>
                                <!--编辑节-->
                        <div class="reveal section-height" id="edit-section" data-reveal>
                            <h5>编辑节</h5>
                            <div class="chapter-form">
                                <label style="width: 80px;height: 40px;font-size: 1rem">章标题 </label>
                                <div class="medium-10 columns">
                                    <select id="chapter-select">
                                        <option value="1">第1章</option>
                                        <option value="2">第2章</option>
                                        <option value="3">第3章</option>
                                        <option value="4">第4章</option>
                                    </select>
                                </div>
                            </div>
                            <div class="chapter-form">
                                <label style="width: 80px;height: 40px; font-size: 1rem">节标题 </label>
                                <div class="medium-10 columns">
                                    <input type="text" placeholder="最多输入60个字符" maxlength="60" id="edit_section_content">
                                </div>

                            </div>

                            <div class="chapter-form">
                                <label style="width: 80px;height: 40px; font-size: 1rem">教学手段 </label>
                                <fieldset class="large-6 columns">

                                    <input id="edit_trial_check" type="checkbox" checked disabled ><label
                                        for="edit_trial_check">实验</label>
                                    <input id="edit_video_check" type="checkbox"><label
                                        for="edit_video_check">视频</label>
                                     <input id="edit_data_check" type="checkbox"><label
                                        for="edit_data_check">资料</label>
                                </fieldset>

                            </div>
                            <div class="chapter-form noshow">
                                <div class="enviroment" id="edit_environment">
                                    <fieldset class="large-12 columns">
                                        <input type="radio" name="pokemon" value="webIDE" id="edit_ide_radio"
                                               required><label for="ide_radio">webIDE</label>
                                    </fieldset>
                                </div>

                            </div>
                             <div class="flex-right">
                                    <button class="hollow button secondary window-close" style="margin-right: 20px;"
                                            data-close="">取消
                                    </button>
                                    <button class="hollow button secondary window-save" id="edit_section">确定</button>

                                </div>
                        </div>
                                <!--删除章-->
                        <div class="reveal chapter-height" id="delete-chapter" data-reveal>
                            <h5>删除章</h5>
                            <p style="text-indent: 2em;margin: 28px 0px;font-size: 1rem">确定要删除这一章么？</p>
                            <div  >
                                <a class="chapter-button window-close clear search-css" data-close>取消</a>
                                <a class="chapter-button clear search-css" id="delete_chapter">确定</a>
                            </div>
                        </div>
                                <!--删除节-->
                        <div class="reveal chapter-height" id="delete-section" data-reveal>
                            <h5>删除节</h5>
                            <p style="text-indent: 2em;margin: 28px 0px;font-size: 1rem">确定要删除这一节么？</p>
                            <div class="row delete-row">
                                <a class="chapter-button window-close clear  search-css" data-close="">取消</a>
                                <a class="chapter-button clear  search-css" id="delete_section">确定</a>
                            </div>
                        </div>
                                <!--添加节-->
                        <a data-open="add-section" style=""><span class="span-config"><i
                                class="fi-plus i-view"
                                ></i>添加节</span></a>

                        <div class="reveal section-height" id="add-section" data-reveal>
                            <h5>添加节</h5>
                            <div style="display: block;">
                                <div class="chapter-form">
                                    <label style="width: 80px;height: 40px;font-size: 1rem">章标题 </label>
                                    <div class="medium-10 columns">
                                        <select id="chapter_sum">

                                        </select>
                                    </div>
                                </div>


                                <div class="chapter-form">
                                    <label style="width: 80px;height: 40px; font-size: 1rem">节标题 </label>
                                    <div class="medium-10 columns">
                                        <input type="text" placeholder="最多输入60个字符" maxlength="60" id="add_section_title">
                                    </div>

                                </div>
                                <div class="chapter-form">
                                    <label style="width: 80px;height: 40px; font-size: 1rem">教学手段 </label>
                                    <fieldset class="large-6 columns">

                                        <input id="trial_check" type="checkbox" checked disabled><label for="trial_check" >实验</label>
                                        <input id="video_check" type="checkbox"><label for="video_check">视频</label>
                                        <input id="data_check" type="checkbox"><label for="data_check">资料</label>
                                    </fieldset>

                                </div>
                                <div class="chapter-form noshow">
                                    <div class="enviroment" id="environment">
                                        <fieldset class="large-12 columns">
                                            <input type="radio" name="pokemon" value="webIDE" id="ide_radio"
                                                   required><label for="ide_radio">webIDE</label>
                                        </fieldset>
                                    </div>

                                </div>
                                <div class="flex-right">
                                    <button class="hollow button secondary window-close" style="margin-right: 20px;"
                                            data-close="">取消
                                    </button>
                                    <button class="hollow button secondary window-save"  onclick="create_section('',0,0,'create')">确定</button>

                                </div>


                            </div>
                        </div>

                        </span>


                        </div>
                        <div class="tabs-content" data-tabs-content="example-tabs">
                            <!--目录部分-->
                            <div class="tabs-panel is-active" id="panel1">
                                <div class="no-content"><span>暂未添加任何章节</span></div>
                                <dl class="catalog-content" id="catalog-content" style="display: none;">
                                </dl>
                            </div>
                            <!--富文本-->
                            <div class="reveal" id="openEditor" data-reveal>

                                <textarea id="editor"  placeholder="这里输入内容" autofocus></textarea>

                                <div class="center">
                                    <button class="hollow button secondary" href="#">保存</button>
                                </div>

                                <button class="close-button" data-close aria-label="Close modal" type="button">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <!--成绩部分-->
                            <div class="tabs-panel" id="panel2">

                                <dl class="score_content" id="score-content" style="display: none;">

                                </dl>
                            </div>
                            <!--改分-->
                            <div class="reveal reveal-r" id="score-count" data-reveal style="width: 1000px;border-radius: 10px;">
                                <h5 class="mytitle">成绩评定</h5>
                                <form class="window" target="pingding" action=" " method="post">
                                    <table>
                                        <thead>
                                        <tr>
                                            <th width="50px">序号</th>
