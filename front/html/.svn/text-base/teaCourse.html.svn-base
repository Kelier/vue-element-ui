<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>课程维护</title>
    <link rel="shortcut icon" href="../image/icon.ico"/>

    <link rel="stylesheet" href="../css/loading.css">
    <link rel="stylesheet" href="../css/water.css">
    <link rel="stylesheet" href="../css/drop.css">

    <link rel="stylesheet" href="../../bower_components/foundation-sites/dist/css/foundation.min.css">
    <link rel="stylesheet" href="../font/foundation-icons.css">
    <link rel="stylesheet" href="../../bower_components/cropper/dist/cropper.min.css">


    <link rel="stylesheet" href="../css/nav.css">
    <link rel="stylesheet" href="../css/course.css">
    <link rel="stylesheet" href="../css/course2.css">
    <link rel="stylesheet" href="../css/toastr.css">
    <link rel="stylesheet" href="../css/pagination-my.css">
    <style>
        .row{
            max-width: 100%;
        }
    </style>
</head>
<body>
<!--头部-->
<header id="header" class="header">
    @@include('include/header.html')

</header>

<!--内容部分-->
<div id="content">

    <!--导航部分-->
    @@include('include/nav.html')
    <!--面包屑-->
    <div id="bread_nav" class="bread-nav bread-box">
        <div class="box-content bread-content">
            <nav aria-label="You are here:" role="navigation" class="ul-margin">

                <ul class="breadcrumbs">
                    <li><i class="fi-marker"></i> 当前位置</li>
                    <li>首页</li>
                    <li>找课程</li>
                    <li>
                        <span class="show-for-sr">当前: </span> 课程详情
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="course-flex">
        <div class="course-box">
            <div id="course_details" class="course_details">
                <!--课程介绍-->
                <div id="course_panel" class="course_panel">
                    <div class="course_cover">
                        <img id="coverUrl" src="" alt=""
                             class="cover">
                        <!--<div class="lay-pen" id="lay_pen">-->
                            <a data-open="cover_modal" class="pencil-lay"><img  src='../image/edit1.png'></a>
                    <!--    </div>-->
                        <!-- This is the first modal -->
                        <div class="reveal cover_modal" id="cover_modal" data-reveal>
                            <h4>课程封面</h4>
                            <p class="lead">
                            <hr>
                            </p>
                            <button class="btn-select"  id="btn_select_file">
                                点击选择文件
                            </button>
                            <!--<div class="image-cover" id="image_cover"><img src="" id="cover_path">-->
                            <!--</div>-->
                            <div class="div_prog">
                                <div id="prog_file"></div>
                            </div>
                           <!-- <input type="file" style="display: none;" id="file_cover" onchange="change_cover()">-->
                            <p class="lead-cover">可以上传jpg，gif，png格式的文件，图片建议尺寸至少为480X270px，文件大小不要超过2M</p>
                            <div class="padding-button">
                                <!--<button class="upload-cover-button button" onclick="upload_cover()" id="change-image">-->
                                    <!--选择要上传的图片-->
                                <!--</button>-->
                                <button class="upload-cover-button button" onclick="save_cover()">
                                    上传封面
                                </button>
                            </div>

                            <div class="upload-cover"></div>
                            <button class="close-button" data-close aria-label="Close reveal" type="button">
                                <span aria-hidden="true" class="close-custom">&times;</span>
                            </button>
                        </div>

                        <div class="reveal cover_modal" id="file_modal" data-reveal>
                            <h4 id="upload_courseInfo">资料上传</h4>
                            <p class="lead">
                            <hr>
                            </p>
                            <button class="btn-select"  id="btn_select_data">
                                点击选择文件
                            </button>
                            <div class="div_prog">
                                <div id="prog_data"></div>
                            </div>
                            <input type="file" style="display: none;" id="" onchange="change_cover()">
                            <p class="lead-cover">请添加一个文件，如果多文件请打包后再添加，文件大小不要超过10M</p>
                            <div class="padding-button">

                                <button class="upload-cover-button button" onclick="upload_source()">
                                    开始上传
                                </button>
                            </div>

                            <div class="upload-cover"></div>
                            <button id="#btn_close_data" class="close-button" data-close aria-label="Close reveal" type="button">
                                <span aria-hidden="true" class="close-custom">&times;</span>
                            </button>
                        </div>

                    </div>
                    <div class="course_page">
                        <div class="pre-setting" id="pre_setting"><i class="fi-wrench"></i></div>
                        <div class="course_title">
                            <span id="lessonName"></span>
                            <span class="span-config course-code" id="slCode"></span>
                            <span class="span-config" id="span_config"><a onclick="echo_title()"><img  src='../image/edit2.png'></a></span>
                            <!--<div class="tri-label" id="tri-label"></div>-->
                            <!--<span class="tri-title" id="tri-title">已发布</span>-->
                        </div>
                        <div class="text_edit"><textarea name="title_edit" id="title_edit" placeholder="请输入课程简介"
                                                         cols="30"
                                                         rows="10" class="title-edit"
                                                         onchange="saveUpateInfo()"
                                                         onkeydown="invokeHandle(event)"></textarea></div>
                        <div class="course_info" id="course_info" >

                        </div>
                        <div class="minify_text">
                            <a data-open="div_summary" onclick="showCourseSummary()"  id="mini_more" class="a-more"  ><span >更多>></span></a>
                            <div class="reveal summary_height" id="div_summary" data-reveal>
                                <h5>课程简介</h5>
                                <div class="summary_form" id="div_sum_detail">
                                </div>
                                <button class="close-button" data-close aria-label="Close modal" type="button">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                        <div class="course-config" id="course_config">
                            <a onclick="switchPreview()" class="button button-custom-long"  id="switchPreview">预览</a>
                            <!--<a href="about.html" class="button button-custom-small">配置</a>-->
                        </div>

                    </div>

                </div>
                <div class="content-flex">
                    <!--课程目录及成绩信息-->
                    <div id="course_catalog" class="course_catalog">
                        <div class="catalog_tilte">
