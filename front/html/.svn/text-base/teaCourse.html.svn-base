                                            <th width="120px">姓名</th>
                                            <th width="50px">分数</th>
                                            <th width="120px">操作</th>
                                        </tr>
                                        </thead>
                                        <tbody id="load-list">

                                        </tbody>
                                    </table>

                                </form>
                                <div class="center">
                                    <ul class="pagination" id="pagination-yang" >
                                    </ul>
                                </div>
                                <div class="flex-right">
                                    <button class="hollow button secondary window-close" style="margin-right: 20px;"
                                            data-close="">取消
                                    </button>
                                    <button class="hollow button secondary window-save" id="submitScore">保存</button>

                                </div>
                            </div>
