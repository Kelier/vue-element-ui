                            <div class="reveal reveal-r" id="score-info" data-reveal style="width: 1000px;border-radius: 10px;">
                                <h5 class="mytitle">分数查看</h5>
                                <div class="row">
                                    <ul class="menu menu-padding window-search">

                                        <li style="display: inline-block"><input type="search" id="score-name" placeholder="请输入关键字搜索" class="select-middle">
                                        </li><li style="display: inline-block">
                                            <button type="button" onclick="searchScoreList(1)" class="button search-button select-right"><img src="../image/icon_search.png"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
