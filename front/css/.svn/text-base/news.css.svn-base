.box-news{
    display: flex;
    justify-content: center;
    height: inherit
}
.box-height{
    height: 100%;
    min-height: 700px;
    background-color: #fff;
    margin-top:20px;
    justify-content: center;
}
.news-page{
    width: 800px;
    height: auto;
    padding: 20px 0;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}
.news-row{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.news-time{
    width:200px;
}
.news-content{
    margin-top:40px;
}
.news-content>p{
    text-indent: 2em;
    line-height: 30px;
}
.news-icon-custom{
    font-size: x-large;
    line-height: 1;

}
.news-icon-custom-share{
    font-size: x-large;
    line-height: 1;
    margin-right:150px;
}

.footer-share{
    display: flex;
    justify-content: flex-end;
}
.news-footer{
    height:auto;
    position: relative;
    display: block;
    margin-top:150px;
    margin-bottom:50px;
}
.lay-end-pow{

    flex: 1;
    display: flex;
    justify-content: flex-end;

}
.lay-end-err{
    display: flex;
}