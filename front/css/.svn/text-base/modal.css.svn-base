*{
    font-size: 14px;
}
li{
    list-style: none;
}
p,ul,label,input,table tbody th{
    margin: 0px;
    padding: 0px;
}
a{
    color: #1a1a1a;
}
.mytitle{
    line-height: 46px;
    border-bottom: 1px solid #999999;
    font-size: 16px;
}
/* btn*/
.orange-btn{
    color: #FFFFFF;
    background-color:#ff6908;
    border:1px solid #ff6908;
    border-radius: 5px;
    padding: 10px 22px;
    margin: 4px 10px;
}
.orange-btn1{
    color: #ff6908;
    background-color:#ffebda;
    border:1px solid #ff6908;
    border-radius: 5px;
    padding: 10px 22px;
    margin: 4px 10px;

}
.reveal-r{
    width: auto;
    border-radius: 10px;
}
/* Modal- 课程封面*/
.window{
    padding: 20px 14px 6px 14px;
    width: 100%;
    text-align: center;

}
.ps{
    margin-bottom: 30px;
}
.window img{
    width: 100%;
    margin-bottom: 20px;
}
/* Modal- 选择章节*/
.window label{
    margin: 14px 10px;
    text-align: left;
}
.window label select{
    width: 60%;
    height: 34px;
    margin: 0px;
    font-size: 14px;
}
.window label span{
    width: 76px;
    display: inline-block;
    text-align: right;
}
.win-input{
    width: 60%;
    height: 34px;
    border: 1px solid #cacaca;
    background: #FFFFFF;
}
/* Modal- 评分*/
.window table thead tr th{
    text-align: center;
    padding: 6px 2px;
}
.score label{
    margin: 0px;
}
.score label input{
    width: 100%;
    height: 28px;
    text-align: center;
}