html {
    height: 100%;
}

body {
    overflow-x: hidden;
    padding-left: 10px;
    margin: auto;
    width: 100%;
    height: 100%;
}

.el-menu-margin {
    margin: -1em;
}

.el-menu-item.is-active {
    color: #bfcbd9;
    background-color: #48576a;
}

.el-menu-item.title {
    font-size: x-large;
    left: 2%;
    padding-top: 6px;
}

.el-menu-item.solo {
    line-height: 80px;
    margin-right: 2em;
}

.el-menu-item.solo.left {
    float: right;
}

.content {
    display: flex;
    width: auto;
    margin-top: 1em;
    margin-left: -1em;
    min-height: 100%;
    margin-bottom: -1em;
    background: #fff;
}

.nav.left {
    overflow: hidden;
    width: 18%;
    height: auto;
    background-color: #324157;
    float: left;
}

.el-col.lesser {
    width: 100%;
}

.page {
    float: left;
    width: 82%;
    background-color: #fff;
    height: auto;
}

.iclass {
    margin-left: 1em;
}

.ispan {
    margin-left: 10px;
}

.breadNav {
    position: inherit;
    margin-top: 1em;
    margin-left: 1em;
}

.info_change {
    position: inherit;
    margin-top: 2em;
    margin-left: 2em;
}

.table_box {
    position: inherit;
    margin: 1em 1em 1em 1em;
}

.mould {
    float: right;
    margin-right: 2em;
}

.v-modal {
    z-index: 1;
}

.el-dialog--tiny {
    width: auto;
    position: inherit;
}

.search_area {
    display: inline-flex;
    margin-top: 2em;
    margin-left: 2em;
    margin-bottom: 1em;
}

.boot {
    margin-left: 5em;
}
.boot-news {
    margin-left: 2em;
}

.padding {
    margin-bottom: 1em;
    height: 20px;
}

.boot-auto {
    margin-left: 3em;
    width: auto;
}

.demo-table-expand {
    font-size: 0;
    margin-left: 60px;
}

.demo-table-expand label {
    width: 90px;
    color: #99a9bf;
}

.demo-table-expand .el-form-item {
    margin-right: 0;
    margin-bottom: 0;
    width: 50%;
}

.pagi {
    margin-top: 1em;
}

.dialog-info {
    margin-bottom: 1em;
}

.my-icon:hover {
    cursor: pointer;
}

.el-button + .el-button {
    margin-left: 0px;
}

#pic {
    position: relative;

}

#pic1 {
    width: 400px;
    height: 300px;
    border-radius: 5px;
    -webkit-box-shadow: 5px 5px 5px 5px hsla(0, 0%, 5%, 1.00);
    box-shadow: 5px 5px 5px 0px hsla(0, 0%, 5%, 0.3);
    z-index:9999;
    position: absolute;
}
#app{
    height:100%;
}
.simditor-body img{
    width:100% !important;
    height:100% !important;
}
.el-loading-mask{
    background: rgba(0,0,0,.08);
}
